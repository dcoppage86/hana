<h1>Projects</h1>
<br>


<%= form_tag projects_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


<% @projects.all.each do |p| %>
    <div class="container">

        <h2><%= link_to "#{p.name}", project_path(p) %></h2>

        <% tasks = p.tasks %>
            <%= render partial: 'tasks/lists', :locals => {:@tasks => tasks}%>

        
    </div>
<% end %>