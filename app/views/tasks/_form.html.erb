
<div class="container">
    <%= form_for ([@user, @task]) do |f| %>

    <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :project_id, "Choose a project:" %>
        <%= f.collection_select :project_id, Project.all, :id, :name %>
    </div>

    <% if @user %>
       <%= f.hidden_field :user_id  %>
    <% else  %>
      <div class="form-group">
        <%= f.label :user_id, "Choose a Employee:" %>
        <%= f.collection_select :user_id, User.all, :id, :first_name %>
    </div>
    <% end %>   
    

    <div class="form-group">
        <%= f.label :completed %>
        <%= f.check_box :completed %>
    </div>
        

    <div class="form-group">
        <%= f.submit "Submit Task", class: "btn btn-primary" %>
    </div>
    <% end %>
</div>