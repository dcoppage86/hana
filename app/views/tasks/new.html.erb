<div class="container">
    <%= form_for (@task) do |f| %>

    <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.input :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :project_id, "Choose a project:" %>
        <%= f.collection_select :project_id, Project.all, :id, :name %>
    </div>

