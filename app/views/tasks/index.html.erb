<center><% if @user %>
<div><h1>Welcome, <%= @user.first_name if @user %> </h1>
<br>
<h2>These are your tasks:</h2>
<br>
<%= link_to 'Create a task', new_user_task_path(@user), class: "btn btn-primary" %>
<br>
</div>
<% end %>
</center>
<br>

<table class = "table table-striped" >
    <thead class = "thead-dark">
      <tr>
        <th scope="col">Task</th>
        <th scope="col">Project</th>
        <th scope="col">Employee</th>
        <th scope="col">Update</th>
      </tr>
    </thead>
    <tbody>


    <% @tasks.all.each do |t| %>
        <% if !t.completed %>
         <tr scope="row">
            <td><%= t.name %></td>
            <td><%= t.project.name %></td>
            <td><%= t.user.first_name %></td>
            <td><%= link_to "Edit", edit_task_path(t) %></td>
        </tr>
            
            
        <% end %>
    <% end %>
    </tbody>
</table>

    